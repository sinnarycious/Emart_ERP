<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

    <resultMap type="Member" id="resultMember"> 
    	<result column="USER_NO" property="userNo" />
    	<result column="USER_ID" property="userId" />
    	<result column="USER_PWD" property="userPwd" />
    	<result column="USER_RNO" property="userRNo" />
    	<result column="USER_NAME" property="userName" />
    	<result column="USER_EMAIL" property="userEmail" />
    	<result column="USER_PHONE" property="userPhone" />
    	<result column="USER_BRANCH" property="userBranch" />
    	<result column="USER_OPENDATE" property="userOpenDate" />
    	<result column="USER_ATT_NO" property="userAttNO" />
    </resultMap>
    
    <!-- 로그인시 아이디와 비밀번호 확인 -->
    <select id="selectOneMember" parameterType="Member" resultMap="resultMember">
    	SELECT * FROM MEMBER
    	WHERE USER_ID =#{ userId } AND USER_PWD = #{ userPwd }
    </select>
	<!-- 로그인 끝 -->

	<!-- 아이디 찾기시 이름과 전화번호 확인 -->
	<select id="searchMemberId" parameterType="Member" resultMap="resultMember">
		SELECT USER_ID
		FROM MEMBER
		WHERE USER_NAME = #{ userName } AND USER_EMAIL = #{ userEmail }
	</select>
	<!-- 아이디 찾기 끝 -->

	<!-- 비밀번호 찾기시 아이디, 이름 -->
	<select id="searchMemberPwd" parameterType="Member" resultMap="resultMember">
		SELECT USER_PWD
		FROM MEMBER
		WHERE USER_ID =#{ userId } AND USER_EMAIL =#{ userEmail }
	</select>
	<!-- 비밀번호 찾기 끝 -->
	
	<update id="updateMember" parameterType="Member">
		UPDATE MEMBER SET USER_PWD = #{ userPwd },
						  USER_EMAIL= #{ userEmail },  
		                  USER_PHONE = #{ userPhone }
		WHERE USER_ID = #{ userId } 

	</update>
<!-- 
	USER_NO, USER_ID, USER_PWD, USER_RNO,
	USER_NAME, USER_EMAIL, USER_PHONE,
	USER_BRANCH, USER_OPENDATE, USER_ATT_NO
-->
<!-- 
	ATT_NO, ATT_NAME
-->


</mapper>